<div class="container">
  <h1 class='page-title'>show page</h1>
  <div class="section-container">
    <div class = 'profile-container'><h2>Profile section</h2>
      <p style="color:blue;">profile description line 1</p>
      <p style="color:blue;">profile description line 2</p>
      <p style="color:blue;">profile description line 3</p>
      <% chatroom_check = Chatroom.where(sender: @event.user, recepient: current_user).or(Chatroom.where(sender: current_user, recepient: @event.user)) %>
      <% if chatroom_check.empty?%>
        <%= link_to "Message", chatrooms_path(chatroom: {recepient_id: @event.user.id}), method: :post, class:'btn btn-primary'%>
      <% else %>
        <%= link_to "Message", chatroom_path(chatroom_check.first), class:'btn btn-primary'%>
      <% end %>
    </div>

    <div class= 'event-container' style="color:green;">
      <h2>Event Section</h2>
      <%= @event.sport %>
      <%= @event.date %>
      <%= @event.duration %>
      <%= @event.level %>
      <%= simple_form_for [@event,@booking] do |f| %>
        <% if current_user != @event.user  %>
          <%= f.button :submit, "Book Now", class:'btn btn-primary' %>
        <% end %>
      <% end %>
     <div>
      <h2>Other events hosted by the <%= @event.user.first_name %></h2>
    </div>
  </div>
</div>

  <div class="btn-container">
    <%= link_to 'Back', events_path, class: "btn btn-primary" %>
  </div>

<div class="carousel-container">
  <% emojis = ["&#128521","	&#128579","&#128587","&#128131","&#128170"] %>
  <% emoji = emojis.sample.to_s %>
  <p>Check out <%= @event.sport %> events by other Sportify users &#128521&#128071</p>
  <% @events.each do |event|%>
    <p>
      <%= event.sport %>
      <%= event.user.first_name %>
    </p>
  <% end %>
</div>
