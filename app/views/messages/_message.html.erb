<div class="message-container" id="message-<%= message.id %>">
  <i class="author">
    <%  if message.user.photo.key.nil? %>
      <%= image_tag "default_profil.png", crop: :fill,  class: "avatar" %>
    <% else  %>
      <%= cl_image_tag message.user.photo.key, crop: :fill,  class: "avatar" %>
    <% end  %>
    <span><%= message.user.first_name %></span>
    <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
  </i>
  <p class="conv-message">
  <%= message.content %>
  </p>
</div>
